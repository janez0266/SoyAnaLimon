                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10sp"
                  android:oriion="horizontal">

                  <Button
                      android:id="@+id/btn_new_pedido"
                      style="@style/Widget.AppCompat.Button.Colored"
